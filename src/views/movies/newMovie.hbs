<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h4>Agregar Pelicula</h4>
            </div>
        </div>
        <div class="card-body">


            <form action="/movies/newMovie" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus/>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
                </div>
                <div><input type="file" name="image" class="btn btn mb1 black bg-silver"><br></div>

                <button class="btn btn-success btn-block">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>